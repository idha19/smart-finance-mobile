<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Dashboard">

    <!-- PROFILE SECTION -->
    <LinearLayout
        android:id="@+id/profileSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- Texts -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profileWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome,"
                android:textSize="12sp"
                android:fontFamily="@font/manrope_regular"
                android:textColor="?attr/colorOnPrimary"
                android:lineSpacingExtra="-6dp"/>

            <TextView
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pengguna"
                android:textSize="20sp"
                android:fontFamily="@font/manrope_bold"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginTop="-6dp"/>
        </LinearLayout>

        <!-- Profile Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/account"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- SCROLL SECTION -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Balance Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/roundedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="1dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/utamaUt"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/labelSisa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sisa Keuangan"
                        android:textSize="18sp"
                        android:fontFamily="@font/manrope_bold"
                        android:textColor="?attr/colorOnPrimary"/>

                    <TextView
                        android:id="@+id/nominalSisa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 15.000.000"
                        android:textSize="30sp"
                        android:layout_marginTop="-4dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/manrope_bold"
                        android:textColor="?attr/colorOnPrimary"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/box_rounded">

                            <TextView
                                android:id="@+id/pemasukanTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pemasukkan"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnPrimary"
                                android:fontFamily="@font/manrope_bold"/>

                            <TextView
                                android:id="@+id/nominalPemasukan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp. 12.000.000"
                                android:textSize="14sp"
                                android:fontFamily="@font/manrope_medium"
                                android:textColor="?attr/colorOnPrimary"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:background="@drawable/box_rounded">

                            <TextView
                                android:id="@+id/pengeluaranTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pengeluaran"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnPrimary"
                                android:fontFamily="@font/manrope_bold"/>

                            <TextView
                                android:id="@+id/nominalPengeluaran"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp. 12.000.000"
                                android:textSize="14sp"
                                android:fontFamily="@font/manrope_medium"
                                android:textColor="?attr/colorOnPrimary"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Notification Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/notif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="14dp"
                    android:paddingHorizontal="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iconNotif"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/notif"
                        android:layout_marginRight="12dp"/>

                    <TextView
                        android:id="@+id/txtNotif"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pengeluaran bulan ini 15% lebih tinggi dari rata-rata."
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnPrimary"
                        android:fontFamily="@font/manrope_medium"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Section Title -->
            <LinearLayout
                android:id="@+id/jenisTransaksiLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/jenisTransaksi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Laporan Terbaru"
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnPrimary"
                    android:fontFamily="@font/manrope_bold"/>

                <ImageView
                    android:id="@+id/iconCalendar"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/calender"
                    android:layout_marginLeft="12dp"/>
            </LinearLayout>

            <!-- RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTransaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="9dp"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>