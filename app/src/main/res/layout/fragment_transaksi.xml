<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BgUt">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/judulLaporan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Laporan Keuangan"
            android:textSize="20sp"
            android:fontFamily="@font/manrope_bold"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <!-- RIGHT (kosong tetapi diperlukan supaya title tetap center) -->
        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/abu22"/>


    <!-- SEARCH & DELETE BAR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:background="@drawable/rounded_search">

            <ImageView
                android:id="@+id/iconSearch"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/search"/>

            <EditText
                android:id="@+id/inputSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cari transaksi..."
                android:background="@android:color/transparent"
                android:paddingStart="10dp"
                android:textSize="15sp"
                android:fontFamily="@font/manrope_medium"
                android:singleLine="true"
                android:imeOptions="actionSearch"/>
        </LinearLayout>


    </LinearLayout>

    <!-- RECYCLERVIEW -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTransaksi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/btnHapus"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/utamaUt"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/iconDelete"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/delete"
                android:layout_marginEnd="8dp"
                android:contentDescription="Delete Icon" />

            <TextView
                android:id="@+id/btnHapusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hapus"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/manrope_bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
