<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- CARD -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="6dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="?attr/colorSurface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            app:cardBackgroundColor="?attr/colorSurface">

            <!-- ICON KIRI -->
            <LinearLayout
                android:id="@+id/iconContainer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/icon_bg"
                android:backgroundTint="@color/bgMasuk"
                android:gravity="center"
                android:layout_marginRight="14dp">

                <ImageView
                    android:id="@+id/iconArrow"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_masuk"/>
            </LinearLayout>


            <!-- Teks Tengah -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textJudul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pemasukkan"
                    android:textSize="16sp"
                    android:fontFamily="@font/manrope_bold"/>

                <TextView
                    android:id="@+id/textCatatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keuntungan Proyek B"
                    android:fontFamily="@font/manrope_regular"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>


            <!-- Nominal + tanggal kanan -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/textNominal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 12.000.000"
                    android:textSize="16sp"
                    android:fontFamily="@font/manrope_bold"
                    android:textColor="@color/masuk"
                    android:gravity="end"/>

                <TextView
                    android:id="@+id/tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22 Nov 2025"
                    android:fontFamily="@font/manrope_regular"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    android:gravity="end"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
