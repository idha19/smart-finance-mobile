<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="5dp"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="5dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- ICON KATEGORI -->
        <ImageView
            android:id="@+id/iconKategori"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_belanja"
            android:contentDescription="Kategori Icon" />

        <!-- Bagian Kiri: Jenis & Catatan -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textJenis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pemasukan"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/pink" />

            <TextView
                android:id="@+id/textCatatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beli bahan makanan"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Bagian Kanan: Nominal & Tanggal -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end|center_vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/textNominal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 200.000"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="end" />

            <TextView
                android:id="@+id/textTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11 November 2025"
                android:textSize="12sp"
                android:textColor="#777"
                android:gravity="end"
                android:layout_marginTop="2dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
