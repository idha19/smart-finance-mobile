<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- ========================= -->
    <!--        CARD ISI           -->
    <!-- ========================= -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="5dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@drawable/input_box">

            <CheckBox
                android:id="@+id/checkBoxKategori"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:backgroundTint="@color/box"
                android:layout_marginEnd="10dp"/>

            <!-- Bagian kiri -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textJudul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gaji Karyawan"
                    android:textSize="16sp"
                    android:fontFamily="@font/manrope_medium"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/textKategori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gaji"
                    android:fontFamily="@font/manrope_regular"
                    android:textSize="13sp"
                    android:ellipsize="end"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Bagian kanan -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/textNominal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+Rp 200.000.000"
                        android:textSize="14sp"
                        android:fontFamily="@font/manrope_bold"
                        android:textStyle="bold"
                        android:textColor="@color/keluar"
                        android:gravity="end"/>

                    <TextView
                        android:id="@+id/textJenis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pemasukkan"
                        android:fontFamily="@font/manrope_regular"
                        android:textSize="12sp"
                        android:gravity="end"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/btnEditKategori"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/edit"
                    android:contentDescription="Edit"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
