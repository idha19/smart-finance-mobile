<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- FRAGMENT CONTAINER -->
        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="0dp"
            android:clipToPadding="false"
            android:fitsSystemWindows="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/abu22"/>

        <!-- BOTTOM MENU -->
        <LinearLayout
            android:id="@+id/bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal"
            android:background="?attr/android:statusBarColor"
            android:elevation="10dp"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewHome"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/home" />

                <TextView
                    android:id="@+id/textViewHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnPrimary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_statistik"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewStatistik"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/charts" />

                <TextView
                    android:id="@+id/textViewStatistik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Statistik"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnPrimary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_notes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewNotes"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/laporan" />

                <TextView
                    android:id="@+id/textViewNotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laporan"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnPrimary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_profil"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewProfil"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/user" />

                <TextView
                    android:id="@+id/textViewProfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profil"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnPrimary" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- FLOATING BUTTON -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/ic_add"
        app:tint="@color/black"
        app:backgroundTint="@color/utamaUt"
        app:maxImageSize="36dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

</FrameLayout>