<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Judul -->
        <TextView
            android:id="@+id/tvJudulStatistik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statistik Pengeluaran"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/text"
            android:layout_marginBottom="8dp" />

        <!-- Input Tanggal -->
        <EditText
            android:id="@+id/etTanggalStatistik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Pilih tanggal"
            android:focusable="false"
            android:clickable="true"
            android:padding="12dp"
            android:textColor="@color/text"
            android:layout_marginBottom="16dp" />

        <!-- Tombol Filter Periode -->
        <HorizontalScrollView
            android:id="@+id/scrollFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:id="@+id/layoutFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <Button
                    android:id="@+id/btnHari"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hari"
                    android:textColor="#9C27B0"
                    android:backgroundTint="#9C27B0"
                    android:layout_marginEnd="8dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="6dp" />

                <Button
                    android:id="@+id/btnMinggu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minggu"
                    android:textColor="#9C27B0"
                    android:backgroundTint="#E1BEE7"
                    android:layout_marginEnd="8dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="6dp" />

                <Button
                    android:id="@+id/btnBulan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bulan"
                    android:textColor="#9C27B0"
                    android:backgroundTint="#E1BEE7"
                    android:layout_marginEnd="8dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="6dp" />

                <Button
                    android:id="@+id/btnTahun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tahun"
                    android:textColor="#9C27B0"
                    android:backgroundTint="#E1BEE7"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="6dp" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Judul PieChart -->
        <TextView
            android:id="@+id/tvJudulPie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Persentase Pengeluaran per Kategori"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/text"
            android:layout_marginBottom="8dp" />

        <!-- PieChart -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartKategori"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>
