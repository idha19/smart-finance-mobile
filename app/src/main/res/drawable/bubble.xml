<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Soft pink gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFC7DE"
                android:endColor="#FF9BC4"
                android:angle="90"/>
            <corners android:radius="22dp"/>
        </shape>
    </item>

    <!-- Bubble besar kiri atas -->
    <item>
        <shape android:shape="oval">
            <size android:width="180dp" android:height="180dp" />
            <solid android:color="#20FFFFFF" />
        </shape>
    </item>

    <!-- Bubble sedang kanan bawah -->
    <item
        android:left="200dp"
        android:top="50dp">
        <shape android:shape="oval">
            <size android:width="120dp" android:height="120dp" />
            <solid android:color="#25FFFFFF" />
        </shape>
    </item>

    <!-- Bubble kecil kiri bawah -->
    <item
        android:left="40dp"
        android:top="90dp">
        <shape android:shape="oval">
            <size android:width="70dp" android:height="70dp" />
            <solid android:color="#18FFFFFF" />
        </shape>
    </item>

</layer-list>
