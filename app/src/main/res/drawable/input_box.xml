<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- BLUR SHADOW (soft, wide spread) -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#1A000000" /> <!-- 10% opacity -->
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- DROP SHADOW (Y = 4 dp, blur = ~4 dp) -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- 20% opacity -->
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- CARD UTAMA -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSurface"/>
            <stroke android:color="?attr/strokeColor" android:width="1dp"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

</layer-list>