<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.DompetKu" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/BgUt</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Primary UI Control (checkbox, switch, dsb) -->
        <item name="colorPrimary">@color/utamaUt</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorControlActivated">@color/utamaUt</item>

        <!-- Background Default -->
        <item name="android:colorBackground">@color/BgUt</item>
        <item name="colorSurface">@color/white</item>
        <item name="strokeColor">@color/strokeBox</item>
        <item name="android:color">@color/white</item>

        <!-- Text mengikuti theme -->
        <item name="android:textColorPrimary">@color/text</item>
        <item name="colorSecondary">@color/jenis</item>

    </style>
</resources>

